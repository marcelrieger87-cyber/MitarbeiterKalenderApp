<Window x:Class="MitarbeiterKalenderApp.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MitarbeiterKalenderApp.Wpf.ViewModels"
        Title="Mitarbeiter Kalender" Height="920" Width="1550"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBg}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel LastChildFill="True">

        <!-- TOP BAR (Eingabefelder/Dropdowns/Buttons wie Excel, aber App-like) -->
        <Border DockPanel.Dock="Top" Background="{StaticResource BarBg}" Padding="10"
                BorderBrush="{StaticResource BorderBrush1}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Zeile 1 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="18"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="18"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Monat Navigation -->
                    <Button Grid.Column="0" Content="â—€" Command="{Binding PrevMonthCommand}" Margin="0,0,6,0"/>
                    <Button Grid.Column="1" Content="â–¶" Command="{Binding NextMonthCommand}" Margin="0,0,10,0"/>

                    <TextBlock Grid.Column="2" FontWeight="SemiBold" FontSize="18" Text="{Binding MonthTitle}"/>

                    <!-- Mitarbeiter Auswahl -->
                    <TextBlock Grid.Column="4" Text="Mitarbeiter:" Margin="0,0,6,0"/>
                    <ComboBox Grid.Column="5"
                              ItemsSource="{Binding Employees}"
                              SelectedItem="{Binding SelectedEmployee}"
                              DisplayMemberPath="Name"/>

                    <Button Grid.Column="6" Content="+" Command="{Binding AddEmployeeCommand}" ToolTip="Mitarbeiter anlegen"/>
                    <Button Grid.Column="7" Content="-" Command="{Binding DeleteEmployeeCommand}" ToolTip="Mitarbeiter lÃ¶schen" />

                    <!-- Kunden Dropdown -->
                    <TextBlock Grid.Column="8" Text="Kunde:" Margin="14,0,6,0"/>
                    <ComboBox Grid.Column="9"
                              ItemsSource="{Binding Customers}"
                              SelectedItem="{Binding SelectedCustomer}"
                              DisplayMemberPath="DisplayName"/>

                    <!-- Rechts: Sort / Export -->
                    <StackPanel Grid.Column="10" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Sortieren Aâ†’Z" Command="{Binding SortEmployeesCommand}" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="Export Excel" Command="{Binding ExportExcelCommand}"/>
                        <Button Content="Export PDF" Command="{Binding ExportPdfCommand}"/>
                    </StackPanel>
                </Grid>

                <!-- Zeile 2: Pfad / Suche -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="18"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Speicherpfad (OneDrive / Root):" Margin="0,0,6,0"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding StorageBasePath, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Basisordner, in dem Mitarbeiter_Kalender angelegt wird"/>

                    <TextBlock Grid.Column="3" Text="Suche:" Margin="0,0,6,0"/>
                    <TextBox Grid.Column="4"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Filter (Titel/Notiz)"/>

                    <Button Grid.Column="5" Content="Reload" Command="{Binding ReloadCommand}" Style="{StaticResource SecondaryButton}"/>
                </Grid>

            </Grid>
        </Border>

        <!-- KACHELN (wie in Excel: Mitarbeiter/Termin/Serie/Feiertage/...) -->
        <Border DockPanel.Dock="Top" Background="White" Padding="10"
                BorderBrush="{StaticResource BorderBrush1}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource TileButton}" Content="ðŸ§‘ Mitarbeiter anlegen"
                        Command="{Binding AddEmployeeCommand}"/>
                <Button Style="{StaticResource TileButton}" Content="ðŸ—‘ï¸ Mitarbeiter lÃ¶schen"
                        Command="{Binding DeleteEmployeeCommand}"/>
                <Button Style="{StaticResource TileButton}" Content="ðŸ“… Neuer Termin"
                        Command="{Binding NewAppointmentCommand}"/>
                <Button Style="{StaticResource TileButton}" Content="ðŸ” Serie erstellen"
                        Command="{Binding NewSeriesCommand}"/>
                <Button Style="{StaticResource TileButton}" Content="ðŸŽ‰ Feiertage anzeigen"
                        Command="{Binding ToggleHolidaysCommand}"/>
            </StackPanel>
        </Border>

        <!-- CONTENT -->
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Kopfzeile Tage -->
            <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderBrush1}" BorderThickness="0,0,0,1">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderBrush1}" BorderThickness="0,0,1,0">
                            <TextBlock Margin="10,8" FontWeight="SemiBold" Text="Mitarbeiter"/>
                        </Border>

                        <ItemsControl Grid.Column="1" ItemsSource="{Binding DayHeaders}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="140" BorderBrush="{StaticResource BorderBrush1}" BorderThickness="0,0,1,0" Background="White">
                                        <StackPanel Margin="8,6">
                                            <TextBlock FontWeight="SemiBold" Text="{Binding Title}"/>
                                            <TextBlock Foreground="#475569" FontSize="12" Text="{Binding SubTitle}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- Mitarbeiter untereinander -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Background="White">
                <ItemsControl ItemsSource="{Binding EmployeeRows}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush1}" BorderThickness="0,0,1,1" Background="#FFFFFF">
                                    <StackPanel Margin="10,8">
                                        <TextBlock FontWeight="SemiBold" Text="{Binding Name}"/>
                                        <TextBlock Foreground="#475569" FontSize="12" Text="{Binding Meta}"/>
                                    </StackPanel>
                                </Border>

                                <ItemsControl Grid.Column="1" ItemsSource="{Binding DayCells}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="140" Height="56"
                                                    BorderBrush="{StaticResource BorderBrush1}" BorderThickness="0,0,1,1"
                                                    Background="{Binding Background}">
                                                <Grid Margin="6,4">
                                                    <TextBlock FontSize="12" FontWeight="SemiBold"
                                                               Text="{Binding Line1}" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock FontSize="11" Margin="0,18,0,0"
                                                               Foreground="#334155"
                                                               Text="{Binding Line2}" TextTrimming="CharacterEllipsis"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
