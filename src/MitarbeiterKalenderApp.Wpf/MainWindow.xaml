<Window x:Class="MitarbeiterKalenderApp.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MitarbeiterKalenderApp.Wpf.ViewModels"
        Title="Mitarbeiter Kalender" Height="900" Width="1500"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel LastChildFill="True">

        <!-- TOP BAR wie Excel: Buttons + Inputs + Dropdowns -->
        <Border DockPanel.Dock="Top" Background="#F3F4F6" Padding="10" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Links: Navigation Monat -->
                <Button Grid.Column="0" Content="◀" Command="{Binding PrevMonthCommand}"/>
                <Button Grid.Column="1" Content="▶" Command="{Binding NextMonthCommand}"/>

                <TextBlock Grid.Column="2" Margin="10,0,0,0" FontWeight="SemiBold" FontSize="16"
                           Text="{Binding MonthTitle}"/>

                <TextBlock Grid.Column="3" Margin="14,0,0,0" Foreground="#6B7280"
                           Text="Ansicht wie Excel, aber als App"/>

                <!-- Spacer -->
                <Border Grid.Column="4"/>

                <!-- Mitte: Filter / Eingaben -->
                <TextBlock Grid.Column="5" Text="Mitarbeiter:"/>
                <ComboBox Grid.Column="6"
                          ItemsSource="{Binding Employees}"
                          SelectedItem="{Binding SelectedEmployee}"
                          DisplayMemberPath="Name"/>

                <TextBlock Grid.Column="7" Margin="12,0,0,0" Text="Suche:"/>
                <TextBox Grid.Column="8" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Kunde / Notiz / Titel"/>

                <!-- Haupt-Spacer -->
                <Border Grid.Column="9"/>

                <!-- Rechts: Aktionen -->
                <StackPanel Grid.Column="10" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Neuer Termin" Command="{Binding NewAppointmentCommand}"/>
                    <Button Content="Abwesenheit" Command="{Binding NewAbsenceCommand}"/>
                    <Button Content="Export Excel" Command="{Binding ExportExcelCommand}"/>
                    <Button Content="Export PDF" Command="{Binding ExportPdfCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT: Excel-ähnliche Kalenderansicht -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Kopfzeile Tage -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
                            <TextBlock Margin="10,8" FontWeight="SemiBold" Text="Mitarbeiter"/>
                        </Border>

                        <ItemsControl Grid.Column="1" ItemsSource="{Binding DayHeaders}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="140" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0" Background="White">
                                        <StackPanel Margin="8,6">
                                            <TextBlock FontWeight="SemiBold" Text="{Binding Title}"/>
                                            <TextBlock Foreground="#6B7280" FontSize="12" Text="{Binding SubTitle}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- Mitarbeiter untereinander, scrollbar -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          Background="White">
                <ItemsControl ItemsSource="{Binding EmployeeRows}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="260"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Mitarbeiter-Label links -->
                                <Border Grid.Column="0" BorderBrush="#E5E7EB" BorderThickness="0,0,1,1" Background="#FAFAFA">
                                    <StackPanel Margin="10,8">
                                        <TextBlock FontWeight="SemiBold" Text="{Binding Name}"/>
                                        <TextBlock Foreground="#6B7280" FontSize="12" Text="{Binding Meta}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Kalender-Zeile rechts -->
                                <ItemsControl Grid.Column="1" ItemsSource="{Binding DayCells}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="140" Height="56"
                                                    BorderBrush="#E5E7EB" BorderThickness="0,0,1,1"
                                                    Background="{Binding Background}">
                                                <Grid Margin="6,4">
                                                    <TextBlock FontSize="12" Text="{Binding Line1}" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock FontSize="11" Margin="0,18,0,0"
                                                               Foreground="#6B7280"
                                                               Text="{Binding Line2}" TextTrimming="CharacterEllipsis"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
