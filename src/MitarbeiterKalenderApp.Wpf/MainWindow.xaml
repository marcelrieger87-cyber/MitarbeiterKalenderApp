<Window x:Class="MitarbeiterKalenderApp.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MitarbeiterKalenderApp.Wpf.ViewModels"
        Title="Mitarbeiter Kalender" Height="900" Width="1550"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <DockPanel LastChildFill="True">

        <!-- TOP: Leiste wie Excel (aber App-like) -->
        <Border DockPanel.Dock="Top" Background="{StaticResource PanelBrush}" BorderBrush="{StaticResource BorderBrushSoft}" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0: Navigation + Monat -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="◀" Command="{Binding PrevMonthCommand}" Style="{StaticResource SecondaryButton}"/>
                    <Button Grid.Column="1" Content="▶" Command="{Binding NextMonthCommand}" Style="{StaticResource SecondaryButton}"/>

                    <TextBlock Grid.Column="2" Margin="14,0,0,0" FontWeight="SemiBold" FontSize="18"
                               Text="{Binding MonthTitle}"/>

                    <Border Grid.Column="4"/>

                    <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Neuer Termin" Command="{Binding NewAppointmentCommand}"/>
                        <Button Content="Serie erstellen" Command="{Binding NewSeriesCommand}" Style="{StaticResource GreenButton}"/>
                        <Button Content="Abwesenheit" Command="{Binding NewAbsenceCommand}" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>

                <!-- Row 2: Eingaben (Pfad, Kunde, Mitarbeiterverwaltung) -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="520"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Speicherpfad:" FontWeight="SemiBold"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding SaveBasePath, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Basisordner für Mitarbeiter_Kalender (z.B. OneDrive Pfad)"/>

                    <TextBlock Grid.Column="3" Text="Kunde:" FontWeight="SemiBold"/>
                    <ComboBox Grid.Column="4"
                              ItemsSource="{Binding Customers}"
                              SelectedItem="{Binding SelectedCustomer}"
                              DisplayMemberPath="DisplayName"/>

                    <TextBlock Grid.Column="6" Text="Mitarbeiter:" FontWeight="SemiBold"/>
                    <ComboBox Grid.Column="7"
                              ItemsSource="{Binding Employees}"
                              SelectedItem="{Binding SelectedEmployee}"
                              DisplayMemberPath="Name"/>

                    <Border Grid.Column="9"/>

                    <StackPanel Grid.Column="10" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Mitarbeiter +" Command="{Binding AddEmployeeCommand}" Style="{StaticResource GreenButton}"/>
                        <Button Content="Mitarbeiter -" Command="{Binding DeleteEmployeeCommand}" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="Sortieren" Command="{Binding SortEmployeesCommand}" Style="{StaticResource SecondaryButton}"/>
                        <Button Content="Export Excel" Command="{Binding ExportExcelCommand}" />
                        <Button Content="Export PDF" Command="{Binding ExportPdfCommand}" Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Kopfzeile Tage -->
            <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderBrushSoft}" BorderThickness="0,0,0,1">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="320"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linke Spalte Header -->
                        <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrushSoft}" BorderThickness="0,0,1,0">
                            <TextBlock Margin="12,10" FontWeight="SemiBold" Text="Mitarbeiter (untereinander)"/>
                        </Border>

                        <!-- Tage -->
                        <ItemsControl Grid.Column="1" ItemsSource="{Binding DayHeaders}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="150" BorderBrush="{StaticResource BorderBrushSoft}" BorderThickness="0,0,1,0"
                                            Background="{Binding Background}">
                                        <StackPanel Margin="10,8">
                                            <TextBlock FontWeight="SemiBold" Text="{Binding Title}"/>
                                            <TextBlock Foreground="#6B7280" FontSize="12" Text="{Binding SubTitle}"/>
                                            <TextBlock Foreground="#16A34A" FontSize="11" Text="{Binding HolidayLabel}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- Zeilen + Kacheln rechts/oben ist schon in Topbar; hier Mitarbeiter-Liste -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          Background="White">
                <ItemsControl ItemsSource="{Binding EmployeeRows}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="320"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Mitarbeiter links -->
                                <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrushSoft}" BorderThickness="0,0,1,1" Background="#F9FAFB">
                                    <StackPanel Margin="12,10">
                                        <TextBlock FontWeight="SemiBold" Text="{Binding Name}"/>
                                        <TextBlock Foreground="#6B7280" FontSize="12" Text="{Binding Meta}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Tageszellen rechts -->
                                <ItemsControl Grid.Column="1" ItemsSource="{Binding DayCells}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="150" Height="64"
                                                    BorderBrush="{StaticResource BorderBrushSoft}" BorderThickness="0,0,1,1"
                                                    Background="{Binding Background}">
                                                <Grid Margin="8,6">
                                                    <TextBlock FontSize="12" FontWeight="SemiBold"
                                                               Text="{Binding Line1}" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock FontSize="11" Margin="0,22,0,0"
                                                               Foreground="#374151"
                                                               Text="{Binding Line2}" TextTrimming="CharacterEllipsis"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
