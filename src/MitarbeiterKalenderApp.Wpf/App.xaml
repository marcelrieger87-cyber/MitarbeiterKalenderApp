<Application x:Class="MitarbeiterKalenderApp.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- Farben: nicht grau-matschig -->
        <Color x:Key="BgColor">#FFFFFF</Color>
        <Color x:Key="PanelColor">#F8FAFC</Color>
        <Color x:Key="BorderColor">#E5E7EB</Color>
        <Color x:Key="AccentColor">#16A34A</Color> <!-- Grün -->
        <Color x:Key="Accent2Color">#2563EB</Color> <!-- Blau -->

        <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}"/>
        <SolidColorBrush x:Key="BorderBrushSoft" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="Accent2Brush" Color="{StaticResource Accent2Color}"/>

        <!-- Buttons modern -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,7"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="{StaticResource Accent2Brush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Sekundär Button (per Tag im XAML anwenden mit Style=... ) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#111827"/>
        </Style>

        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </Application.Resources>
</Application>
