<Window x:Class="Mitarbeiter.Kalender.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Mitarbeiter.Kalender.App.Controls"
        mc:Ignorable="d"
        Title="Mitarbeiter Kalender"
        Width="1500" Height="850"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F2F2F2" Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                CornerRadius="14"
                Background="White"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1: Inputs + Month Nav -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="560"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Mitarbeiter + Kunde -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Mitarbeitername:"
                                       Foreground="#666"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <!-- WPF: kein PlaceholderText -->
                            <TextBox Grid.Column="1"
                                     Text="{Binding NewEmployeeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="36"
                                     Margin="10,0,10,0"/>

                            <Button Grid.Column="2"
                                    Content="MA anlegen"
                                    Command="{Binding AddEmployeeCommand}"
                                    Height="36"/>
                        </Grid>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Kundenname:"
                                       Foreground="#666"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                                     Text="{Binding CustomerFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="36"
                                     Margin="10,0,0,0"/>
                        </Grid>
                    </Grid>

                    <!-- Middle: Year/Month + Nav -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left">
                        <TextBlock Text="Jahr:"
                                   Foreground="#666"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <TextBox Text="{Binding Year, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="90" Height="36" Margin="10,0,0,0"/>

                        <TextBlock Text="Monat:"
                                   Foreground="#666"
                                   FontWeight="SemiBold"
                                   Margin="18,0,0,0"
                                   VerticalAlignment="Center"/>

                        <TextBox Text="{Binding Month, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="70" Height="36" Margin="10,0,0,0"/>

                        <Button Content="◀"
                                Command="{Binding PrevMonthCommand}"
                                Width="52" Height="36"
                                Margin="16,0,0,0"/>

                        <Button Content="▶"
                                Command="{Binding NextMonthCommand}"
                                Width="52" Height="36"
                                Margin="10,0,0,0"/>

                        <Button Content="Heute"
                                Command="{Binding TodayCommand}"
                                Height="36"
                                Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Right: Month Title -->
                    <StackPanel Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding MonthTitle}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#222"
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="Monat horizontal scrollen · Mitarbeiter untereinander"
                                   Foreground="#777"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <!-- Row 2: Buttons (Excel-ähnlich, ohne Überlappung) -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="520"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LINKS: 2x2-Block (Termin) -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0"
                                Content="Termin verteilen"
                                Command="{Binding AddAppointmentCommand}"
                                Height="44"/>

                        <Button Grid.Row="0" Grid.Column="2"
                                Content="Serie erstellen"
                                Command="{Binding CreateSeriesCommand}"
                                Height="44"/>

                        <Button Grid.Row="2" Grid.Column="0"
                                Content="Termin ändern"
                                Command="{Binding EditCommand}"
                                Height="44"/>

                        <Button Grid.Row="2" Grid.Column="2"
                                Content="Termin löschen"
                                Command="{Binding DeleteCommand}"
                                Height="44"/>
                    </Grid>

                    <!-- MITTE: SYNC (eigenes Feld, zentriert) -->
                    <Button Grid.Column="1"
                            Width="140" Height="94"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="SYNC"
                            Command="{Binding SyncCommand}"/>

                    <!-- RECHTS: 2x2-Block (Abwesenheit/Status/MA) -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0"
                                Content="Abwesenheit"
                                Command="{Binding AddAbsenceCommand}"
                                Height="44"/>

                        <Button Grid.Row="0" Grid.Column="2"
                                Content="Status ändern"
                                Command="{Binding StatusCommand}"
                                Height="44"/>

                        <Button Grid.Row="2" Grid.Column="0"
                                Content="MA löschen"
                                Command="{Binding RemoveEmployeeCommand}"
                                Height="44"/>

                        <Button Grid.Row="2" Grid.Column="2"
                                Content="Mitarbeiter sortieren"
                                Command="{Binding SortEmployeesCommand}"
                                Height="44"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!-- CALENDAR -->
        <Border Grid.Row="2"
                CornerRadius="14"
                Background="White"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Padding="10">
            <controls:ScheduleMonthControl MonthView="{Binding MonthView}"/>
        </Border>
    </Grid>
</Window>
