<Window x:Class="Mitarbeiter.Kalender.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Mitarbeiter.Kalender.App.Controls"
        mc:Ignorable="d"
        Title="Mitarbeiter Kalender"
        Width="1500" Height="850"
        Background="{DynamicResource AppBackground}">

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                CornerRadius="14"
                Background="{DynamicResource Surface}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1: Inputs + Month Nav -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="560"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Mitarbeiter + Kunde -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Mitarbeitername:"
                                       Foreground="{DynamicResource TextMuted}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                                     Text="{Binding NewEmployeeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="36"
                                     Margin="10,0,10,0"
                                     Style="{DynamicResource ExcelTextBox}"/>

                            <Button Grid.Column="2"
                                    Content="MA anlegen"
                                    Command="{Binding AddEmployeeCommand}"
                                    Height="36"
                                    Style="{DynamicResource ExcelButtonBlue}"/>
                        </Grid>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Kundenname:"
                                       Foreground="{DynamicResource TextMuted}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                                     Text="{Binding CustomerFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="36"
                                     Margin="10,0,0,0"
                                     Style="{DynamicResource ExcelTextBox}"/>
                        </Grid>
                    </Grid>

                    <!-- Middle: Year/Month + Nav -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="Jahr:" Foreground="{DynamicResource TextMuted}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Year, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="90" Height="36" Margin="10,0,0,0"
                                 Style="{DynamicResource ExcelTextBox}"/>

                        <TextBlock Text="Monat:" Foreground="{DynamicResource TextMuted}" FontWeight="SemiBold" Margin="18,0,0,0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Month, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="70" Height="36" Margin="10,0,0,0"
                                 Style="{DynamicResource ExcelTextBox}"/>

                        <Button Content="◀" Command="{Binding PrevMonthCommand}" Width="52" Height="36" Margin="16,0,0,0" Style="{DynamicResource ExcelButtonGrey}"/>
                        <Button Content="▶" Command="{Binding NextMonthCommand}" Width="52" Height="36" Margin="10,0,0,0" Style="{DynamicResource ExcelButtonGrey}"/>
                        <Button Content="Heute" Command="{Binding TodayCommand}" Height="36" Margin="10,0,0,0" Style="{DynamicResource ExcelButtonGrey}"/>
                    </StackPanel>

                    <!-- Right: Month Title -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="{Binding MonthTitle}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource Text}" HorizontalAlignment="Right"/>
                        <TextBlock Text="Monat horizontal scrollen · Mitarbeiter untereinander" Foreground="{DynamicResource TextMuted}" Margin="0,4,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <!-- Row 2: Buttons exakt wie Excel-Layout -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LINKS (oben/unten) -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" Content="Termin verteilen" Command="{Binding AddAppointmentCommand}" Height="44" Style="{DynamicResource ExcelButtonGreen}"/>
                        <Button Grid.Row="2" Content="Serie erstellen" Command="{Binding DemoCommand}" Height="44" Style="{DynamicResource ExcelButtonPurple}"/>
                    </Grid>

                    <!-- MITTE: Termin ändern / löschen + SYNC -->
                    <Grid Grid.Column="1" Margin="16,0,16,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" Content="Termin ändern" Command="{Binding EditCommand}" Height="44" Style="{DynamicResource ExcelButtonOrange}"/>
                        <Button Grid.Row="2" Content="Termin löschen" Command="{Binding DeleteCommand}" Height="44" Style="{DynamicResource ExcelButtonRed}"/>
                    </Grid>

                    <Button Grid.Column="1"
                            Width="140" Height="94"
                            HorizontalAlignment="Right"
                            Content="SYNC"
                            Command="{Binding SyncCommand}"
                            Style="{DynamicResource ExcelButtonBlack}"/>

                    <!-- RECHTS: Abwesenheit / Status + MA löschen / sortieren -->
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="260"/>
                            <ColumnDefinition Width="260"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Abwesenheit" Command="{Binding AddAbsenceCommand}" Height="44" Style="{DynamicResource ExcelButtonYellow}" Margin="0,0,12,0"/>
                        <Button Grid.Column="1" Content="Status ändern" Command="{Binding StatusCommand}" Height="44" Style="{DynamicResource ExcelButtonPink}" Margin="0,0,12,0"/>

                        <Button Grid.Column="2" Content="MA löschen" Command="{Binding RemoveEmployeeCommand}" Height="44" Style="{DynamicResource ExcelButtonRed}" Margin="0,0,12,0"/>
                        <Button Grid.Column="3" Content="Mitarbeiter sortieren" Command="{Binding SortEmployeesCommand}" Height="44" Style="{DynamicResource ExcelButtonGrey}"/>
                    </Grid>
                </Grid>

            </Grid>
        </Border>

        <!-- CALENDAR -->
        <controls:ScheduleMonthControl Grid.Row="2"
                                       MonthView="{Binding MonthView}"/>
    </Grid>
</Window>
