<Window x:Class="MitarbeiterKalender.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mitarbeiter Kalender"
        Height="900"
        Width="1400"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F2F2F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== TOP BAR ===== -->
        <Border Grid.Row="0"
                Background="White"
                Padding="12"
                Margin="8"
                CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Monat -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="◀" Width="32" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding CurrentMonth}"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <Button Content="▶" Width="32" Margin="4,0,0,0"/>
                </StackPanel>

                <!-- Heute -->
                <Button Grid.Column="1"
                        Content="Heute"
                        Width="120"
                        HorizontalAlignment="Center"/>

                <!-- Mitarbeiter -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBox Width="180"
                             Margin="0,0,6,0"
                             PlaceholderText="Mitarbeitername"/>
                    <Button Content="Mitarbeiter anlegen"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== MAIN CONTENT ===== -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT ACTIONS -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="8"
                    Padding="10"
                    Margin="0,0,8,0">
                <UniformGrid Rows="2" Columns="2">
                    <Button Content="Termin verteilen"/>
                    <Button Content="Serie erstellen"/>
                    <Button Content="Termin ändern"/>
                    <Button Content="Termin löschen"/>
                </UniformGrid>
            </Border>

            <!-- CALENDAR -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="10">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="Kalenderansicht"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </ScrollViewer>
            </Border>

            <!-- RIGHT ACTIONS -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="8"
                    Padding="10"
                    Margin="8,0,0,0">
                <StackPanel>
                    <UniformGrid Rows="2" Columns="2" Margin="0,0,0,12">
                        <Button Content="Abwesenheit"/>
                        <Button Content="Status ändern"/>
                        <Button Content="MA löschen"/>
                        <Button Content="MA sortieren"/>
                    </UniformGrid>

                    <Button Content="SYNC"
                            Height="48"
                            FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
