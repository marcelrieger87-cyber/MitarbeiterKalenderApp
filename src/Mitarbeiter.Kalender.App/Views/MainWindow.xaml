<Window x:Class="Mitarbeiter.Kalender.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Mitarbeiter.Kalender.App.Controls"
        mc:Ignorable="d"
        Title="Mitarbeiter Kalender"
        Width="1500" Height="850"
        Background="{DynamicResource AppBackground}"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                CornerRadius="14"
                Background="{DynamicResource Surface}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1: Inputs + Month Nav -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="560"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Mitarbeiter + Kunde -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Mitarbeitername:"
                                       Foreground="{DynamicResource TextMuted}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                                     Text="{Binding NewEmployeeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="36"
                                     Margin="10,0,10,0"
                                     Style="{DynamicResource ExcelTextBox}"/>

                            <Button Grid.Column="2"
                                    Content="MA anlegen"
                                    Command="{Binding AddEmployeeCommand}"
                                    Height="36"
                                    Style="{DynamicResource ExcelButtonBlue}"/>
                        </Grid>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Kundenname:"
                                       Foreground="{DynamicResource TextMuted}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <TextBox Grid.Column="1"
                                     Text="{Binding CustomerFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="36"
                                     Margin="10,0,10,0"
                                     Style="{DynamicResource ExcelTextBox}"/>

                            <Button Grid.Column="2"
                                    Content="MA filtern"
                                    Command="{Binding FilterEmployeesCommand}"
                                    Height="36"
                                    Style="{DynamicResource ExcelButtonGrey}"/>
                        </Grid>
                    </Grid>

                    <!-- Middle: Year/Month + Nav -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left">
                        <TextBlock Text="Jahr:"
                                   Foreground="{DynamicResource TextMuted}"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <TextBox Text="{Binding Year, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="90" Height="36" Margin="10,0,0,0"
                                 Style="{DynamicResource ExcelTextBox}"/>

                        <TextBlock Text="Monat:"
                                   Foreground="{DynamicResource TextMuted}"
                                   FontWeight="SemiBold"
                                   Margin="18,0,0,0"
                                   VerticalAlignment="Center"/>

                        <TextBox Text="{Binding Month, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="70" Height="36" Margin="10,0,0,0"
                                 Style="{DynamicResource ExcelTextBox}"/>

                        <Button Content="◀"
                                Command="{Binding PrevMonthCommand}"
                                Width="52" Height="36"
                                Margin="16,0,0,0"
                                Style="{DynamicResource ExcelButtonGrey}"/>

                        <Button Content="▶"
                                Command="{Binding NextMonthCommand}"
                                Width="52" Height="36"
                                Margin="10,0,0,0"
                                Style="{DynamicResource ExcelButtonGrey}"/>

                        <Button Content="Heute"
                                Command="{Binding TodayCommand}"
                                Height="36"
                                Margin="10,0,0,0"
                                Style="{DynamicResource ExcelButtonGrey}"/>
                    </StackPanel>

                    <!-- Right: Month Title -->
                    <StackPanel Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding MonthTitle}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource Text}"
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="Monat horizontal scrollen · Mitarbeiter untereinander"
                                   Foreground="{DynamicResource TextMuted}"
                                   Margin="0,4,0,0"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <!-- Row 2: ACTION TILES -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="520"/>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="520"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT 2x2 -->
                    <UniformGrid Grid.Column="0" Rows="2" Columns="2">
                        <!-- ✅ Termin verteilen: leuchtet im Modus -->
                        <Button Content="Termin verteilen"
                                Height="46"
                                Margin="0,0,10,10"
                                Command="{Binding AddAppointmentCommand}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ExcelButtonGreen}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDistributeModeActive}" Value="True">
                                            <Setter Property="BorderThickness" Value="3"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource HeaderBlue}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsDistributeModeActive}" Value="False">
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Serie erstellen"
                                Height="46"
                                Margin="0,0,0,10"
                                Command="{Binding CreateSeriesCommand}"
                                Style="{DynamicResource ExcelButtonPurple}"/>

                        <Button Content="Termin ändern"
                                Height="46"
                                Margin="0,0,10,0"
                                Command="{Binding EditCommand}"
                                Style="{DynamicResource ExcelButtonOrange}"/>

                        <Button Content="Termin löschen"
                                Height="46"
                                Margin="0,0,0,0"
                                Command="{Binding DeleteCommand}"
                                Style="{DynamicResource ExcelButtonRed}"/>
                    </UniformGrid>

                    <!-- SYNC -->
                    <Button Grid.Column="1"
                            Width="140"
                            Height="102"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="SYNC"
                            Command="{Binding SyncCommand}"
                            Style="{DynamicResource ExcelButtonBlack}"/>

                    <!-- RIGHT 2x2 -->
                    <UniformGrid Grid.Column="2" Rows="2" Columns="2">
                        <Button Content="Abwesenheit"
                                Height="46"
                                Margin="0,0,10,10"
                                Command="{Binding AddAbsenceCommand}"
                                Style="{DynamicResource ExcelButtonYellow}"/>

                        <Button Content="Status ändern"
                                Height="46"
                                Margin="0,0,0,10"
                                Command="{Binding StatusCommand}"
                                Style="{DynamicResource ExcelButtonPink}"/>

                        <Button Content="MA löschen"
                                Height="46"
                                Margin="0,0,10,0"
                                Command="{Binding RemoveEmployeeCommand}"
                                Style="{DynamicResource ExcelButtonRed}"/>

                        <Button Content="Mitarbeiter sortieren"
                                Height="46"
                                Margin="0,0,0,0"
                                Command="{Binding SortEmployeesCommand}"
                                Style="{DynamicResource ExcelButtonGrey}"/>
                    </UniformGrid>
                </Grid>
            </Grid>
        </Border>

        <!-- CALENDAR -->
        <controls:ScheduleMonthControl Grid.Row="2"
                                       MonthView="{Binding MonthView}"
                                       CellClickCommand="{Binding CalendarCellClickCommand}"/>
    </Grid>
</Window>
