<UserControl x:Class="Mitarbeiter.Kalender.App.Controls.CalendarMonthControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Mitarbeiter.Kalender.App.ViewModels"
             xmlns:local="clr-namespace:Mitarbeiter.Kalender.App.Controls"
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:StatusToBrushConverter x:Key="StatusToBrushConverter" />

        <Style TargetType="Border" x:Key="DayCellBorder">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="6" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#14000000" />
            <Setter Property="Background" Value="White" />
        </Style>

        <DataTemplate DataType="{x:Type vm:DayCellViewModel}" x:Key="DayCellTemplate">
            <Border Style="{StaticResource DayCellBorder}">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding RelativeSource={RelativeSource AncestorType=local:CalendarMonthControl}, Path=SelectDayCommand}" CommandParameter="{Binding}" />
                </Border.InputBindings>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <TextBlock Text="{Binding DayLabel}" Foreground="#77000000" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding DayNumber}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" DockPanel.Dock="Right" />
                    </DockPanel>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Absences}" Margin="0,8,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#11C62828" CornerRadius="8" Padding="8,4" Margin="0,0,0,4">
                                    <TextBlock Text="{Binding}" Foreground="#CC000000" FontSize="11" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ScrollViewer Grid.Row="2" Margin="0,6,0,0" VerticalScrollBarVisibility="Hidden">
                        <ItemsControl ItemsSource="{Binding Appointments}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:AppointmentChipViewModel}">
                                    <Border CornerRadius="10" Padding="8,6" Margin="0,0,0,6"
                                            Background="{Binding Status, Converter={StaticResource StatusToBrushConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="White" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Text="{Binding TimeRange}" Foreground="#DDFFFFFF" FontSize="11" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsInCurrentMonth}" Value="False">
                    <Setter Property="Opacity" Value="0.45" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
                    <Setter Property="BorderThickness" Value="2" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <UniformGrid Grid.Row="0" Columns="7" Margin="6,6,6,0">
            <TextBlock Text="Mo" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#88000000" />
            <TextBlock Text="Di" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#88000000" />
            <TextBlock Text="Mi" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#88000000" />
            <TextBlock Text="Do" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#88000000" />
            <TextBlock Text="Fr" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#88000000" />
            <TextBlock Text="Sa" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#88000000" />
            <TextBlock Text="So" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="#88000000" />
        </UniformGrid>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=local:CalendarMonthControl}}" ItemTemplate="{StaticResource DayCellTemplate}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
