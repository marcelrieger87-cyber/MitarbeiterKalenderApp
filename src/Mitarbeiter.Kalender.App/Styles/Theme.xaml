<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- =========================
       Colors / Brushes (Excel-like)
       ========================= -->

  <!-- Background layers -->
  <SolidColorBrush x:Key="AppBackground" Color="#FFF3F5F7"/>
  <SolidColorBrush x:Key="Surface" Color="#FFFFFFFF"/>
  <SolidColorBrush x:Key="SurfaceAlt" Color="#FFF0F3F6"/>

  <!-- Lines / borders -->
  <SolidColorBrush x:Key="Border" Color="#FFD5DEE7"/>
  <SolidColorBrush x:Key="GridLine" Color="#FFE3E9F0"/>

  <!-- Text -->
  <SolidColorBrush x:Key="Text" Color="#FF1E293B"/>
  <SolidColorBrush x:Key="TextMuted" Color="#FF607086"/>

  <!-- Header + Weekend -->
  <SolidColorBrush x:Key="HeaderBlue" Color="#FF1F6F5B"/>     <!-- Excel-like dark green/teal -->
  <SolidColorBrush x:Key="WeekendGreen" Color="#FF2E7D32"/>   <!-- Weekend header -->
  <SolidColorBrush x:Key="WeekendFill" Color="#FFE8F5E9"/>    <!-- Weekend cells -->

  <!-- Status/Absence -->
  <SolidColorBrush x:Key="AbsenceBrush" Color="#FF9C27B0"/>   <!-- purple-ish for ABW chip -->
  <SolidColorBrush x:Key="ShadowSoft" Color="#22000000"/>

  <!-- =========================
       Base Controls
       ========================= -->

  <!-- Modern TextBox -->
  <Style x:Key="ExcelTextBox" TargetType="{x:Type TextBox}">
    <Setter Property="Foreground" Value="{DynamicResource Text}"/>
    <Setter Property="Background" Value="{DynamicResource SurfaceAlt}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="10,6"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type TextBox}">
          <Border x:Name="Bd"
                  CornerRadius="10"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsKeyboardFocused" Value="True">
              <Setter TargetName="Bd" Property="BorderBrush" Value="#FF7AA6FF"/>
              <Setter TargetName="Bd" Property="Background" Value="#FFF7FAFF"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Modern ComboBox -->
  <Style x:Key="ExcelCombo" TargetType="{x:Type ComboBox}">
    <Setter Property="Foreground" Value="{DynamicResource Text}"/>
    <Setter Property="Background" Value="{DynamicResource SurfaceAlt}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="10,6"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ComboBox}">
          <Grid>
            <Border x:Name="Bd"
                    CornerRadius="10"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"/>

            <Grid Margin="8,0,8,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="28"/>
              </Grid.ColumnDefinitions>

              <ContentPresenter Grid.Column="0"
                                Margin="2,0,6,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Content="{TemplateBinding SelectionBoxItem}"/>

              <Border Grid.Column="1"
                      CornerRadius="8"
                      Background="#1A000000"
                      Width="26" Height="26"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Right">
                <TextBlock Text="â–¾"
                           FontSize="14"
                           Foreground="{DynamicResource Text}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
              </Border>
            </Grid>

            <Popup x:Name="PART_Popup"
                   Placement="Bottom"
                   IsOpen="{TemplateBinding IsDropDownOpen}"
                   AllowsTransparency="True"
                   Focusable="False"
                   PopupAnimation="Fade">
              <Border CornerRadius="12"
                      Margin="0,6,0,0"
                      Background="{DynamicResource Surface}"
                      BorderBrush="{DynamicResource Border}"
                      BorderThickness="1">
                <ScrollViewer Margin="0"
                              MaxHeight="340">
                  <ItemsPresenter/>
                </ScrollViewer>
              </Border>
            </Popup>
          </Grid>

          <ControlTemplate.Triggers>
            <Trigger Property="IsKeyboardFocusWithin" Value="True">
              <Setter TargetName="Bd" Property="BorderBrush" Value="#FF7AA6FF"/>
              <Setter TargetName="Bd" Property="Background" Value="#FFF7FAFF"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- =========================
       Buttons (Excel-like colors)
       ========================= -->

  <Style x:Key="ExcelButtonBase" TargetType="{x:Type Button}">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Padding" Value="14,8"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Button}">
          <Border x:Name="Bd"
                  CornerRadius="10"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
            <Grid>
              <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
            </Grid>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="Bd" Property="Opacity" Value="0.82"/>
              <Setter TargetName="Bd" Property="RenderTransform">
                <Setter.Value>
                  <TranslateTransform Y="1"/>
                </Setter.Value>
              </Setter>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="Bd" Property="Opacity" Value="0.45"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="ExcelButtonGreen" TargetType="{x:Type Button}" BasedOn="{StaticResource ExcelButtonBase}">
    <Setter Property="Background" Value="#FF2E7D32"/>
  </Style>

  <Style x:Key="ExcelButtonPurple" TargetType="{x:Type Button}" BasedOn="{StaticResource ExcelButtonBase}">
    <Setter Property="Background" Value="#FF6A1B9A"/>
  </Style>

  <Style x:Key="ExcelButtonOrange" TargetType="{x:Type Button}" BasedOn="{StaticResource ExcelButtonBase}">
    <Setter Property="Background" Value="#FFF57C00"/>
  </Style>

  <Style x:Key="ExcelButtonRed" TargetType="{x:Type Button}" BasedOn="{StaticResource ExcelButtonBase}">
    <Setter Property="Background" Value="#FFD32F2F"/>
  </Style>

  <Style x:Key="ExcelButtonBlack" TargetType="{x:Type Button}" BasedOn="{StaticResource ExcelButtonBase}">
    <Setter Property="Background" Value="#FF263238"/>
  </Style>

  <Style x:Key="ExcelButtonYellow" TargetType="{x:Type Button}" BasedOn="{StaticResource ExcelButtonBase}">
    <Setter Property="Background" Value="#FFFBC02D"/>
    <Setter Property="Foreground" Value="#FF1E293B"/>
  </Style>

  <Style x:Key="ExcelButtonPink" TargetType="{x:Type Button}" BasedOn="{StaticResource ExcelButtonBase}">
    <Setter Property="Background" Value="#FFE91E63"/>
  </Style>

  <Style x:Key="ExcelButtonBlue" TargetType="{x:Type Button}" BasedOn="{StaticResource ExcelButtonBase}">
    <Setter Property="Background" Value="#FF1976D2"/>
  </Style>

  <Style x:Key="ExcelButtonGrey" TargetType="{x:Type Button}" BasedOn="{StaticResource ExcelButtonBase}">
    <Setter Property="Background" Value="#FF607D8B"/>
  </Style>

</ResourceDictionary>
